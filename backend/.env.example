# Application Settings
PROJECT_NAME="FastAPI Application"
PROJECT_DESCRIPTION="A robust FastAPI application with best practices"
VERSION="1.0.0"
API_V1_STR="/api/v1"

# Server Settings
HOST="0.0.0.0"
PORT=8000
DEBUG=false

# Security
SECRET_KEY="your-secret-key-change-this-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080
ALGORITHM="HS256"

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000"

# Trusted Hosts (comma-separated)
ALLOWED_HOSTS="localhost,127.0.0.1"

# Database Configuration
# Option 1: Use DATABASE_URL directly
# DATABASE_URL="postgresql://user:password@localhost:5432/dbname"
# DATABASE_URL="sqlite:///./app.db"

# Option 2: Use individual PostgreSQL components
# POSTGRES_SERVER="localhost"
# POSTGRES_USER="postgres"
# POSTGRES_PASSWORD="password"
# POSTGRES_DB="fastapi_db"
# POSTGRES_PORT="5432"

# SQLite fallback (used if PostgreSQL not configured)
SQLITE_URL="sqlite:///./app.db"

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"  # json or text

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR="uploads"